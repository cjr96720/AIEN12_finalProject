        <script>

            var emailFlag = false;

            // login
            $("#eloginBtn").click(function () {
                var email = $("#email").val();
                var password = $("#pwd").val();
                if (email && password) {
                    var loginInfo = {
                        email: email,
                        password: password,
                    };
                    $.ajax({
                        type: "post",
                        url: "http://localhost:1337/api/elogin",
                        data: JSON.stringify(loginInfo),
                        contentType: "application/json;charset=utf-8",
                    })
                        .done(function (result) {
                            localStorage.clear();
                            if (result.length == 0) {
                                $("#errorMessage").html("Â∏≥ËôüÈåØË™§");
                            }
                            console.log(result[0]);
                            localStorage.setItem("loginStatus", true);
                            localStorage.setItem("userid", result[0].id);
                            localStorage.setItem("username", result[0].empname);
                            localStorage.setItem("useremail", result[0].empemail);
                            window.location.href = "/admin/eindex";
                        })
                        .fail(function (err) {
                            alert("Error: " + err);
                        });
                } else {
                    alert("Ë´ãÂ°´ÁôªÂÖ•Ë≥áË®ä");
                }
            });

            // sign up
            $('#esignupBtn').click(function () {
                var empname = $('#addAdminname').val();
                var empemail = $('#addAdminemail').val();
                var emppassword = $('#addAdminpwd').val();
                if (empname && empemail && emppassword && emailFlag) {
                    var newAdmin = {
                        empname: empname,
                        empemail: empemail,
                        emppassword: emppassword
                    };
                    $.ajax({
                        type: 'post',
                        url: 'http://localhost:1337/api/esignup',
                        data: JSON.stringify(newAdmin),
                        contentType: 'application/json;charset=utf-8'
                    }).done(function (result) {
                        // console.log(result);
                        if (!result.length == 0) {
                            $("#alertMessage").html("Â∏≥ËôüÂ≠òÂú®");
                        }
                        alert('Emp Signup');
                        window.location.href = '/admin/';
                    }
                    ).fail(function (err) {
                        alert('Error: ' + err.errorText);
                    })
                } else {
                    alert("Ê¨Ñ‰ΩçÊúâÂïèÈ°å");
                };
            })


            // check password format
            document.getElementById("addAdminpwd").onblur = checkPwd;
            function checkPwd() {
                //ÂèñÂæóaddAdminpwdÂÖÉÁ¥†
                let thePwdObj = document.getElementById("addAdminpwd");//ÊãøÂà∞Ê¨Ñ‰ΩçÔº©Ôº§
                console.log(typeof thePwdObj);
                //ÂèñÂæóaddAdminpwdÂÖÉÁ¥†ÂÄº
                let thePwdObjVal = thePwdObj.value;//ÊãøÂà∞Ê¨Ñ‰ΩçÂÄº
                console.log(typeof thePwdObjVal);
                console.log(thePwdObjVal);
                //Âà§Êñ∑ÂÖÉÁ¥†ÂÄºÊòØÂê¶ÁÇ∫Á©∫ÁôΩÔºåÂØÜÁ¢ºÈï∑Â∫¶ÊòØÂê¶Â§ßÊñº6
                //Â¶ÇÊûúÈï∑Â∫¶ÊòØÂê¶Â§ßÊñº6ÔºåÂà§Êñ∑ÊòØÂê¶ÂåÖÂê´Â≠óÊØç„ÄÅÊï∏Â≠ó„ÄÅÁâπÊÆäÁ¨¶Ëôü
                let sp = document.getElementById("idsp");
                let thePwdObjValLen = thePwdObjVal.length;//ÊãøÂà∞Ëº∏ÂÖ•ÂÖßÂÆπÈï∑Â∫¶
                let flag1 = false, flag2 = false, flag3 = false;
                if (thePwdObjVal == "")
                    sp.innerHTML = "‰∏çÂèØÁ©∫ÁôΩ";

                // sp.innerHTML = "you need enter";
                else if (thePwdObjValLen >= 6) {

                    sp.innerHTML = ">=";
                    for (let i = 0; i < thePwdObjValLen; i++) {
                        let ch = thePwdObjVal.charAt(i).toUpperCase();
                        if (ch >= "A" && ch <= "Z")
